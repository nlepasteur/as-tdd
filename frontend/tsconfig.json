{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES6"],
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@api": ["../../types"]
      // autre mode de résolution n'était pas possible en raison d'où est localiser le dossier (un niveau plus haut que node_modules) et de comment sont résolus typescript imports
    }
  }
}
